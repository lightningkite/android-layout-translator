<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

        <FrameLayout android:layout_width="match_parent" android:layout_height="200dp">
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|top"
                    android:text="left|top"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|bottom"
                    android:text="left|bottom"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|center_vertical"
                    android:text="left|cv"/>

            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="center_horizontal|top"
                    android:text="ch|top"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="ch|bottom"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="ch|cv"/>

            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="right|top"
                    android:text="right|top"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="right|bottom"
                    android:text="right|bottom"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:text="right|cv"/>

        </FrameLayout>

        <FrameLayout android:layout_width="match_parent" android:layout_height="200dp">
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|top"
                    android:text="top"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|bottom"
                    android:text="bottom"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|center_vertical"
                    android:text="cv"/>

        </FrameLayout>

        <FrameLayout android:layout_width="match_parent" android:layout_height="200dp">
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|center_vertical"
                    android:text="left"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:text="right"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="ch"/>

        </FrameLayout>

        <FrameLayout android:layout_width="match_parent" android:layout_height="200dp">
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:text="fill"/>

        </FrameLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="200dp"
                      android:orientation="horizontal">
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:text="a"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:text="b"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:text="c"/>
            <TextView
                    style="@style/Body"
                    android:background="#FF8080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:text="d"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="200dp"
                      android:padding="4dp"
                      android:orientation="horizontal">
            <TextView
                    style="@style/Body"
                    android:background="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:text="wrap"/>
            <TextView
                    style="@style/Body"
                    android:background="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:text="1x"/>
            <TextView
                    style="@style/Body"
                    android:background="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:text="2x"/>
            <TextView
                    style="@style/Body"
                    android:background="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:text="3x"/>
        </LinearLayout>

        <TextView
                style="@style/Body"
                android:background="#FF8080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="start"
                android:padding="16dp"
                android:text="View One"/>

        <TextView
                style="@style/Body"
                android:background="#FF8080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="View Two"/>

        <TextView
                style="@style/Body"
                android:background="#FF8080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="end"
                android:padding="16dp"
                android:text="View Three"/>

        <TextView
                style="@style/Body"
                android:background="#FF8080"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:text="View Four"/>

        <EditText
                android:id="@+id/focusTest"
                style="@style/Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                tools:focusAtStartup="false"/>

        <TextView
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:text="This is some longer content that is used in an attempt to debug iOS's weirdness involving padding on LinearLayout.  Hopefully it works soon."/>

        <TextView
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:text="This is some longer content that is used in an attempt to debug iOS's weirdness involving padding on LinearLayout.  Hopefully it works soon."/>

    </LinearLayout>
</ScrollView>
